<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rankings

    <a data-toggle="collapse" href="#destination_rankings_new_form">
      Add ranking
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @destination.rankings.each do |ranking| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/rankings/<%= ranking.id %>">
          <%= ranking.user_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%if current_user == ranking.user %>
          <a href="/delete_ranking_from_destination/<%= ranking.id %>">
            Delete
          </a>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="destination_rankings_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "destination_templates/destination_rankings_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
