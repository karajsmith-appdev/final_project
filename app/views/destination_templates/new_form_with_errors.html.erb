<% if @destination.present? %>
  <% if @destination.errors.any? %>
    <% @destination.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new destination
</h1>


<hr>

<form action="/create_destination" method="post">

  <div class="form-group">
    <label for="city">
      City
    </label>

    <input type="text" id="city" name="city" class="form-control" value="<%= @destination.city %>">
  </div>

  <div class="form-group">
    <label for="country">
      Country
    </label>

    <input type="text" id="country" name="country" class="form-control" value="<%= @destination.country %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create destination
  </button>
</form>

<hr>

<a href="/destinations">
  Go back
</a>
