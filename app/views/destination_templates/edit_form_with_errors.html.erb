<!-- Validation failure messages -->
<% if @destination.errors.any? %>
  <% @destination.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit destination #<%= @destination.id %>
</h1>

<hr>

<!-- Form destination start -->
<form action="/update_destination/<%= @destination.id %>" method="post">
<!-- Form destination end -->

  <!-- Label and input for city start -->
  <div class="form-group">
    <label for="city">
      City
    </label>

    <!-- Input for city start -->
    <input type="text" id="city" name="city" class="form-control" value="<%= @destination.city %>">
    <!-- Input for city end -->
  </div>
  <!-- Label and input for city end -->

  <!-- Label and input for country start -->
  <div class="form-group">
    <label for="country">
      Country
    </label>

    <!-- Input for country start -->
    <input type="text" id="country" name="country" class="form-control" value="<%= @destination.country %>">
    <!-- Input for country end -->
  </div>
  <!-- Label and input for country end -->

  <button class="btn btn-block btn-outline-secondary">
    Update destination
  </button>
</form>

<hr>

<a href="/destinations">
  Go back
</a>
