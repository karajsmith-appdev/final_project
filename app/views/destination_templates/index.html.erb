<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All destinations
    </h1>

    <a href="/destinations/new" class="btn btn-block btn-outline-secondary">
      Add a new destination
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "destination_templates/destinations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          Country
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>
        <td>
          <%= destination.id %>
        </td>

        <td>
          <%= destination.city %>
        </td>

        <td>
          <%= destination.country %>
        </td>

        <td>
          <%= time_ago_in_words(destination.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(destination.updated_at) %> ago
        </td>

        <td>
          <a href="/destinations/<%= destination.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @destinations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
