<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All destinations
    </h1>

    <a href="/destinations/new" class="btn btn-block btn-outline-secondary">
      Add a new destination
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          Country
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>
        <!-- Display destination.id start -->
        <td>
          <%= destination.id %>
        </td>
        <!-- Display destination.id end -->

        <!-- Display destination.city start -->
        <td>
          <%= destination.city %>
        </td>
        <!-- Display destination.city end -->

        <!-- Display destination.country start -->
        <td>
          <%= destination.country %>
        </td>
        <!-- Display destination.country end -->

        <!-- Display destination.created_at start -->
        <td>
          <%= time_ago_in_words(destination.created_at) %> ago
        </td>
        <!-- Display destination.created_at end -->

        <!-- Display destination.updated_at start -->
        <td>
          <%= time_ago_in_words(destination.updated_at) %> ago
        </td>
        <!-- Display destination.updated_at end -->

        <td>
          <a href="/destinations/<%= destination.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @destinations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
