<% if @ranking.errors.any? %>
  <% @ranking.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit ranking #<%= @ranking.id %>
</h1>

<hr>

<form action="/update_ranking/<%= @ranking.id %>" method="post">


  <div class="form-group">
    <label for="destination_id">
      Destination
    </label>

    <%= select_tag(:destination_id, options_from_collection_for_select(Destination.all, :id, :city, @ranking.destination_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="rankings">
      Rankings
    </label>

    <input type="text" id="rankings" name="rankings" class="form-control" value="<%= @ranking.rankings %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update ranking
  </button>
</form>

<hr>

<a href="/rankings">
  Go back
</a>
