<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All rankings
    </h1>

    <a href="/rankings/new" class="btn btn-block btn-outline-secondary">
      Add a new ranking
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "ranking_templates/rankings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Destination
        </th>

        <th>
          Rankings
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @rankings.each do |ranking| %>
      <tr>
        <td>
          <%= ranking.id %>
        </td>

        <td>
          <% if ranking.user.present? %>
            <a href="/users/<%= ranking.user.id %>">
              <%= ranking.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if ranking.destination.present? %>
            <a href="/destinations/<%= ranking.destination.id %>">
              <%= ranking.destination.city %>
            </a>
          <% end %>
        </td>

        <td>
          <%= ranking.rankings %>
        </td>

        <td>
          <%= time_ago_in_words(ranking.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(ranking.updated_at) %> ago
        </td>

        <td>
          <a href="/rankings/<%= ranking.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @rankings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
