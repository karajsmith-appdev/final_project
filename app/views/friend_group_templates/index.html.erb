<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All friend groups
    </h1>

    <a href="/friend_groups/new" class="btn btn-block btn-outline-secondary">
      Add a new friend group
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Friend request
        </th>

        <th>
          Name
        </th>

        <th>
          Destination
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friend_groups.each do |friend_group| %>
      <tr>
        <!-- Display friend_group.id start -->
        <td>
          <%= friend_group.id %>
        </td>
        <!-- Display friend_group.id end -->

        <!-- Display friend_group.friend_request_id start -->
        <td>
          <%= friend_group.friend_request.receipient_id %>
        </td>
        <!-- Display friend_group.friend_request_id end -->

        <!-- Display friend_group.name start -->
        <td>
          <%= friend_group.name %>
        </td>
        <!-- Display friend_group.name end -->

        <!-- Display friend_group.destination_id start -->
        <td>
          <%= friend_group.destination_id %>
        </td>
        <!-- Display friend_group.destination_id end -->

        <!-- Display friend_group.created_at start -->
        <td>
          <%= time_ago_in_words(friend_group.created_at) %> ago
        </td>
        <!-- Display friend_group.created_at end -->

        <!-- Display friend_group.updated_at start -->
        <td>
          <%= time_ago_in_words(friend_group.updated_at) %> ago
        </td>
        <!-- Display friend_group.updated_at end -->

        <td>
          <a href="/friend_groups/<%= friend_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
