<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All friend groups
    </h1>

    <a href="/friend_groups/new" class="btn btn-block btn-outline-secondary">
      Add a new friend group
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "friend_group_templates/friend_groups_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Friend request
        </th>

        <th>
          Name
        </th>

        <th>
          Destination
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friend_groups.each do |friend_group| %>
      <tr>
        <td>
          <%= friend_group.id %>
        </td>

        <td>
          <% if friend_group.friend_request.present? %>
            <a href="/friend_requests/<%= friend_group.friend_request.id %>">
              <%= friend_group.friend_request.receipient_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= friend_group.name %>
        </td>

        <td>
          <% if friend_group.destination.present? %>
            <a href="/destinations/<%= friend_group.destination.id %>">
              <%= friend_group.destination.city %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(friend_group.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(friend_group.updated_at) %> ago
        </td>

        <td>
          <a href="/friend_groups/<%= friend_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @friend_groups, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
