<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Friend group #<%= @friend_group.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/friend_groups" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/friend_groups/<%= @friend_group.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit friend group
        </a>
      </div>

      <div class="col">
        <a href="/delete_friend_group/<%= @friend_group.id %>" class="btn btn-block btn-outline-secondary">
          Delete friend group
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Friend request
      </dt>
      <dd>
        <% if @friend_group.friend_request.present? %>
          <a href="/friend_requests/<%= @friend_group.friend_request_id %>">
            <%= @friend_group.friend_request.receipient_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @friend_group.name %>
      </dd>

      <dt>
        Destination
      </dt>
      <dd>
        <% if @friend_group.destination.present? %>
          <a href="/destinations/<%= @friend_group.destination_id %>">
            <%= @friend_group.destination.city %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@friend_group.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@friend_group.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

