<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Friend request #<%= @friend_request.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/friend_requests" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/friend_requests/<%= @friend_request.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit friend request
        </a>
      </div>

      <div class="col">
        <a href="/delete_friend_request/<%= @friend_request.id %>" class="btn btn-block btn-outline-secondary">
          Delete friend request
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Receipient
      </dt>
      <dd>
        <% if @friend_request.receipient.present? %>
          <a href="/users/<%= @friend_request.receipient_id %>">
            <%= @friend_request.receipient.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Sender
      </dt>
      <dd>
        <% if @friend_request.sender.present? %>
          <a href="/users/<%= @friend_request.sender_id %>">
            <%= @friend_request.sender.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @friend_request.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@friend_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@friend_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "friend_request_templates/friend_request_friend_groups" %>
  </div>
</div>
