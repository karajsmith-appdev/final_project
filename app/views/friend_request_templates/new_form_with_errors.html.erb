<% if @friend_request.present? %>
  <% if @friend_request.errors.any? %>
    <% @friend_request.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new friend request
</h1>


<hr>

<form action="/create_friend_request" method="post">

  <div class="form-group">
    <label for="receipient_id">
      Receipient
    </label>

    <%= select_tag(:receipient_id, options_from_collection_for_select(User.all, :id, :username, @friend_request.receipient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :username, @friend_request.sender_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @friend_request.status %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create friend request
  </button>
</form>

<hr>

<a href="/friend_requests">
  Go back
</a>
