<!-- Validation failure messages -->
<% if @friend_request.errors.any? %>
  <% @friend_request.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit friend request #<%= @friend_request.id %>
</h1>

<hr>

<!-- Form friend_request start -->
<form action="/update_friend_request/<%= @friend_request.id %>" method="post">
<!-- Form friend_request end -->

  <!-- Label and input for receipient_id start -->
  <div class="form-group">
    <label for="receipient_id">
      Receipient
    </label>

    <!-- Input for receipient_id start -->
    <input type="text" id="receipient_id" name="receipient_id" class="form-control" value="<%= @friend_request.receipient_id %>">
    <!-- Input for receipient_id end -->
  </div>
  <!-- Label and input for receipient_id end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <input type="text" id="sender_id" name="sender_id" class="form-control" value="<%= @friend_request.sender_id %>">
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control" value="<%= @friend_request.status %>">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <button class="btn btn-block btn-outline-secondary">
    Update friend request
  </button>
</form>

<hr>

<a href="/friend_requests">
  Go back
</a>
